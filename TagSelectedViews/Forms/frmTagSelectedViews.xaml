<Window x:Class="TagSelectedViews.frmTagSelectedViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TagSelectedViews"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" Title="Tag All in Selected Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>                      
        </Grid.RowDefinitions>

        <DataGrid x:Name="sheetGrid" Grid.Row="2"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="AliceBlue" 
                  CanUserAddRows="True" 
                  SelectionMode="Single" 
                  AutoGenerateColumns="False"
                  EnableColumnVirtualization="False"
                  EnableRowVirtualization="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Width="10" IsReadOnly="False"/>
                <DataGridTextColumn Header="Category" Width="*" IsReadOnly="False"/>
                <DataGridTextColumn Header="Loaded Tags" Width="*" IsReadOnly="False"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
